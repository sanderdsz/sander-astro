---
import { Header } from "../components/Header";
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" type="text/css" href="./src/styles/grid.css">
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Sander's personal website">
		<title>{title}</title>
		<style>
			@font-face {
				font-family: "Okta Neue";
				src: url("/public/fonts/OktaNeue-Normal.woff") format("woff");
			}
			@font-face {
				font-family: "Okta Neue";
				font-weight: 800;
				font-style: italic;
				src: url("/public/fonts/OktaNeue-HeavyItalic.woff") format("woff");
			}
			@font-face {
				font-family: "Okta Neue";
				font-weight: 600;
				src: url("/public/fonts/OktaNeue-SemiBold.woff") format("woff");
			}
		</style>
	</head>
	<body>
		<div>
			<Header />
			<slot />
			<Footer />
		</div>
	</body>
</html>

