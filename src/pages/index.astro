import SandersPhoto from "../../public/sander-photo.png"

const count = signal(0);
---

<Layout title="Welcome to Sander's website">
  <main class="flex h-full w-screen bg-snow-100 p-10">
    <div class="flex items-center">
      <div class="w-2/3">
        <!--<span class="text-lg font-thin">Hello, my name is</span>-->
        <Typing />
        <div class="mt-4 lg:mt-8">
          <span class="text-4xl font-semibold text-primary-300">
            Sander
            <span class="text-4xl font-semibold text-secondary-300"
              >dos Santos Zuchinalli.</span
            >
          </span>
        </div>
        <span class="text-2xl font-semibold">A digital craftsman.</span>
        <div class="mt-4 flex lg:mt-8">
          <span class="font-thin leading-relaxed">
            Iâ€™m a software engineer specialized in building (occasionally
            designing) excellent digital experiences, which I tend to switch
